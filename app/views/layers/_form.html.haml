= form_for @layer do |f|
  - if @layer.errors.any?
    #error_explanation
      %h2= "#{pluralize(@layer.errors.count, "error")} prohibited this layer from being saved:"
      %ul
        - @layer.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
