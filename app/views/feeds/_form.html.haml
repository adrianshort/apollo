= form_for @feed do |f|
  %h2 Add a feed

  -if @feed.errors.any?
    #error_explanation
      %h2= "#{pluralize(@feed.errors.count, "error")} prohibited this feed from being saved:"
      %ul
        - @feed.errors.full_messages.each do |msg|
          %li= msg

  .field
  -#
    = f.label :title
    = f.text_field :title
  .field
    = f.label "URL"
    = f.text_field :feed_url, :size => 120
    = f.hidden_field :new_layer_id, :value => @feed.new_layer_id
    = f.submit 'Save', :id => 'submit'
  -#
    .field
      = f.label :last_fetched
      = f.datetime_select :last_fetched
  .actions
